# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
quote_type = single
charset = utf-8
insert_final_newline = true

[*.{json,css,scss,html}]
quote_type = double
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false